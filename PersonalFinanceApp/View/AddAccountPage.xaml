<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalFinanceApp.View.AddAccountPage"
             BackgroundColor="{StaticResource MainForeground}">

    <VerticalStackLayout Padding="20" Spacing="5">

        <Grid ColumnDefinitions="*,*">
            <Frame Grid.Column="0" HorizontalOptions="Start" BackgroundColor="{StaticResource MainForeground}" 
                   BorderColor="{StaticResource MainBackground}" Padding="2">
                <Button Text="Отмена" Command="{Binding CancelCommand}"/>
            </Frame>

            <Frame Grid.Column="1" HorizontalOptions="End" BackgroundColor="{StaticResource MainForeground}" 
                   BorderColor="{StaticResource MainBackground}" Padding="2">
                <Button Text="Сохранить" Command="{Binding SaveCommand}"/>
            </Frame>
        </Grid>

        <Label Text="Создать счет" FontSize="24" FontAttributes="Bold" Margin="0,10"/>

        <Frame Padding="10">
            <Grid ColumnDefinitions="*,*">
                <Entry Text="{Binding AccountName}"/>
                <Label Text="Название счета" TextColor="LightGrey" VerticalOptions="Center" HorizontalOptions="End" Grid.Column="1"/>
            </Grid>
        </Frame>

        <Frame Padding="10">
            <Grid ColumnDefinitions="*,*">
                <Entry Text="{Binding Balance}" Keyboard="Numeric"/>
                <Label Text="Начальный баланс" TextColor="LightGrey" VerticalOptions="Center" HorizontalOptions="End" Grid.Column="1"/>
            </Grid>
        </Frame>
        
    </VerticalStackLayout>
</ContentPage>